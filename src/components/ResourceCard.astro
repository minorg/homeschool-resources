---
import { type CollectionEntry, render } from "astro:content";
import { marked } from "marked";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";

interface Props {
  resource: CollectionEntry<"resources">;
}

const { resource } = Astro.props;

const { Content } = await render(resource);
---

<Card>
  <CardHeader>
    <CardTitle set:html={marked.parse(resource.data.title)} />
    {
      resource.data.creator && (
        <CardDescription set:html={marked.parse(resource.data.creator)} />
      )
    }
  </CardHeader>
  <CardContent>
    <Content />
  </CardContent>
</Card>
