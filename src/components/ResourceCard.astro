---
import { type CollectionEntry, render } from "astro:content";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";

interface Props {
  resource: CollectionEntry<"resources">;
}

const { resource } = Astro.props;

const { Content } = await render(resource);
---

<Card>
  <CardHeader>
    <CardTitle>{resource.data.title}</CardTitle>
    {
      resource.data.description && (
        <CardDescription>{resource.data.description}</CardDescription>
      )
    }
  </CardHeader>
  <CardContent>
    <Content />
  </CardContent>
</Card>
